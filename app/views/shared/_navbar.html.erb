

<header class="site-header">
  <div class="wrapper site-header__wrapper">
      <nav class="nav">
        <button class="nav__toggle btn-green" aria-expanded="false" type="button">
            <% if user_signed_in? %>
              <i class="fas fa-plus"></i>
            <% else %>
              <i class="fas fa-user"></i>
            <% end %>
        </button>
          <ul class="nav__wrapper">
            <% if user_signed_in? %>

              <li class="nav__item"><%= link_to 'Pet', new_pet_path %></li>
              <li class="nav__item"><%= link_to 'Plant', new_plant_path %></li>
            <% else %>
              <li class="nav__item"><%= link_to 'Sign in', user_session_path %></li>
              <li class="nav__item"><%= link_to 'Register', new_user_registration_path %></li>
            <% end %>
          </ul>
      </nav>
    <div class="d-flex align-items-center">
      <a class="navbar-brand" href="/">
        <%= image_tag "Logo.png" %>
      </a>
    </div>
                <div class="navatar">
                <% if user_signed_in? %>
                  <%= link_to dashboard_path do %>
                  <% if user_signed_in? %>
                      <% if current_user.avatar.attached?%>
                        <div class="profile">
                          <%= cl_image_tag current_user.avatar.key %>
                          <h6 class="nav__dashboard" style="color: white"><strong>Dashboard</strong></h6>
                        </div>
                      <% else %>
                        <div class="profile"><%= image_tag "https://via.placeholder.com/350x150" %></div>
                      <% end %>
                  <% else %>
                    <div class="profile">
                      <h6 class="nav__dashboard" style="color: white"><strong><%= link_to 'Register', new_user_registration_path %></strong></h6>
                    </div>
                  <% end %>
              <% end %>
              <% end %>
              </div>

</header>

