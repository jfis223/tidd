<h2><strong>Your dashboard</strong></h2>

<div class="row pb-2">
  <div class="col-6 nopaddinga">
    <% if @user.avatar.attached?%>
       <%= cl_image_tag @user.avatar.key, class: "img-breed" %>
    <% else %>
       <%= image_tag "https://cdn.business2community.com/wp-content/uploads/2017/08/blank-profile-picture-973460_640.png", class: "img-breed" %>
    <% end %>
  </div>
  <div class="col-6 nopaddingb">
    <div class="breed-card">
      <div class="breed-content d-flex flex-column justify-content-center">
        <h4>Welcome, <%= @user.name.capitalize %>! </h4>
        <p><%= @user.email %></p>
        <%= link_to "Edit profile", edit_user_registration_path, class:"btn btn-sm btn-block" %>
        <%= link_to 'Sign out', destroy_user_session_path, method: :delete, data: { confirm: 'Are you certain you want to log out?' }, class:"btn btn-sm btn-block" %>
      </div>
    </div>
  </div>
</div>

<h3 class="mb-4 mt-4"> <strong> My pets üêï </strong></h3>
    <% if current_user.pets.empty? %>
     <h3><%= "You have no pets yet!" %></h3>
    <% else %>
    <div class="cards">
      <% current_user.pets.each do |p| %>
          <div class="card">
            <%= link_to pet_path(p) do %>
                    <div class="row">
                      <div class="col-8">
                        <% if p.image.attached? %>
                          <%= cl_image_tag p.image.key %>
                        <% else %>
                          <%= "No image" %>
                        <% end %>
                      </div>
                      <div class="col-4">
                        <div class="h-100 d-flex justify-content-between flex-column">
                          <div class="d-flex justify-content-between">
                            <div class="icons pt-4">
                              <div class="pr-2"><i class="fas fa-utensils"></i></div>
                              <div class="pr-2"><i class="fas fa-briefcase-medical"></i></div>
                              <div class="pr-2"><i class="fas fa-soap"></i></div>
                            </div>
                            <div class="icons pt-4 pr-4">

                                <i class="far fa-bell"></i>

                            </div>
                          </div>
                          <div class="name-and-breed pb-4">
                              <h3><strong><%= p.name %></strong></h3>
                              <h6 style="font-size: 1.2rem;"> <%= p.breed %> </h6>
                          </div>
                        </div>
                      </div>
                    </div>
               <% end %>
               </div>
        <% end %>
    <% end %>
  </div>

<h3 class="mb-4 mt-4"><strong> My plants üå±</strong></h3>

<div class="cards">
    <% if current_user.plants.empty? %>
        <%= "You have no plants yet!" %>
    <% else %>
    <% current_user.plants.each do |p| %>
    <%= link_to plant_path(p) do %>
            <div class="card">
                    <div class="row">
                      <div class="col-8">
                          <% if p.image.attached? %>
                            <%= cl_image_tag p.image.key %>
                          <% else %>
                            <%= "No image" %>
                          <% end %>
            </div>
            <div class="col-4">
                <div class="h-100 d-flex justify-content-between flex-column">
                  <div class="d-flex justify-content-between">
                    <div class="icons pt-4">
                      <i class="fas fa-tint"></i>
                    </div>
                      <div class="icons pt-4 pr-4">
                      <i class="far fa-bell"></i>
                    </div>
                  </div>
                <div class="name-and-breed pb-4">
                  <h3><strong> <%= p.nickname %></strong></h3>
                  <h6 style="font-size: 1.2rem;"> <%= p.species %></h6>
                </div>
                        </div>
                      </div>
                    </div>
                  </div>
            <% end %>
    <% end %>
  <% end %>
</div>

<div class="container">
  <% @notifications.each do |notification| %>
  <p><%= link_to notification.to_notification.message, notification.to_notification.url %></p>
  <% end %>
</div>
