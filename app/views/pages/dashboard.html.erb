<div class="container pt-5">
  <div class="d-flex justify-content-center align-items-center flex-column">
    <div class="profile_card">
      <div class="avatar", style="text-align: center">
      <% if @user.avatar.attached?%>
        <div class="profile mr-3"><%= cl_image_tag @user.avatar.key %></div>
      <% else %>
        <div class="profile mr-3"><%= image_tag "https://via.placeholder.com/350x150" %></div>
      <% end %>
    </div>
    <div class="media-body text-center text-black p-4">
      <h4 class="mt-0 mb-0">Welcome, <%= @user.name.capitalize %>!</h4>
      <p class="small mb-2 pt-2"><%= @user.email %></p>
      <%= link_to "Edit profile", edit_user_registration_path, class:"btn btn-sm btn-block" %>
    </div>
  </div>


    <div class="p-2">
      <div class="text-center pt-5">
        <h3 class="p-3">MY PETS üêï</h3>
        </div>
        <div class="cards">
    <% if current_user.pets.empty? %>
        <%= "You have no pets yet!" %>
    <% else %>

        <% current_user.pets.each do |p| %>
            <%= link_to pet_path(p) do %>
                  <div class="card">
                    <div class="d-flex justify-content-between align-items-start">
                      <% if p.image.attached? %>
                        <%= cl_image_tag p.image.key %>
                      <% else %>
                        <%= "No image" %>
                      <% end %>
                      <i class="far fa-bell"></i>
                    </div>
                    <span class="d-flex flex-column mt-3 mb-1">
                      <strong><%= p.name %></strong>
                      <%= p.breed %>
                    </span>
                    <div class="d-flex justifiy-content-start align-items-end">
                      <div class="pr-2"><i class="fas fa-utensils"></i></div>
                      <div class="pr-2"><i class="fas fa-briefcase-medical"></i></div>
                      <div class="pr-2"><i class="fas fa-soap"></i></div>
                    </div>
                  </div>
            <% end %>
    <% end %>
  <% end %>
</div>

      <div class="text-center pt-5">
        <h3 class="p-3">MY PLANTS üå±</h3>
         <div class="cards">
<% if current_user.pets.empty? %>
        <%= "You have no plants yet!" %>
    <% else %>
    <% current_user.plants.each do |p| %>
    <%= link_to plant_path(p) do %>
            <div class="card">
              <div class="d-flex justify-content-between align-items-start">
                <% if p.image.attached? %>
                  <%= cl_image_tag p.image.key %>
                <% else %>
                  <%= "No image" %>
                <% end %>
                <i class="far fa-bell"></i>
              </div>

              <span class="d-flex flex-column mt-3 mb-1">
                <strong><%= p.nickname %></strong>
                <%= p.species %>
              </span>
              <div class="d-flex justifiy-content-start align-items-end">
                <div class="pr-2"><i class="fas fa-tint"></i></div>
              </div>
            </div>
            <% end %>
          <% end %>
  <% end %>
</div>



      </div>
    </div>
</div>
