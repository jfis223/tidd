<div class="container pt-5">
  <div class="d-flex justify-content-center align-items-center flex-column mb-3">
    <div class="profile_card card p-4 pt-5">
      <div class="avatar", style="text-align: center">
      <% if @user.avatar.attached?%>
        <div class="d-flex justify-content-center mr-3"><%= cl_image_tag @user.avatar.key, class: "avatar" %></div>
      <% else %>
        <div class=" mr-3"><%= image_tag "https://via.placeholder.com/350x150" %></div>
      <% end %>
      </div>
      <div class="media-body text-center text-black p-4">
        <h4 class="mt-0 mb-0">Welcome, <%= @user.name %>!</h4>
        <p class="small mb-4 pt-2"><%= @user.email %></p>
        <%= link_to "Edit profile", edit_user_registration_path, class:"btn btn-sm btn-block" %>
      </div>
    </div>

    <div class="p-3">
      <div class="text-center pt-5">
        <h3 class="p-3">MY PETS üêï</h3>
        <% if @user.pets.empty? %>
          <%= "You have no pets yet!" %>
        <% else %>
          <%= @user.pets.each do |p| %>
          <%= @user.pets %>
          <% end %>
        <% end %>
      </div>
      <div class="text-center pt-5">
        <h3 class="p-3">MY PLANTS üå±</h3>
         <% if @user.plants.empty? %>
          <%= "You have no plants yet!" %>
        <% else %>
          <%= @user.plants.each do |p| %>
          <%= @user.plants %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
